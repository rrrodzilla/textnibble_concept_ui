#:kivy 2.0.0
#:import C kivy.utils.get_color_from_hex


<AlertButton>:
    alert_text:
    button_text:
    FloatLayout:
#        canvas.before:
#            Color:
#                rgb: C('#FF0000')
#            Rectangle:
#                size: self.size
#                pos: self.pos
        pos_hint: {"center_y": .5, "center_x": .5}
        Button:
#            canvas.before:
#                Color:
#                    rgb: C('#FF0000')
#                Rectangle:
#                    size: self.size
#                    pos: self.pos
            size_hint: 1, 1
            width: 100
            height: 20
            id: button_main
            text: '[i]'+ root.button_text + '[/i]'
            font_name: 'Inter'
            font_size: 18
            pos_hint: {"center_y": .5, "center_x": .5}
            color: C('#F87171')
            background_normal:''
            background_color: 0,0,0,0
            on_press: root.dispatch('on_press')
            markup: True
        Label:
            id: alert
            canvas.before:
                Color:
                    rgb: C('#F87171')
                Ellipse:
                    size: self.size
                    pos: self.pos
            pos_hint: {"center_y": .70, "center_x": .80}
            size_hint: None, None
            color: C('#27272A')
            font_name: 'Inter'
            bold: True
            height: 24
            width: 24
            font_size: 14
            text: root.alert_text
