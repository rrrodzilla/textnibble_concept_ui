#:kivy 2.0.0
#:import C kivy.utils.get_color_from_hex

<KeypadButton@Button>:
    canvas.before:
        Color:
            rgb: (C('#15803D') if not self.disabled else C('#3F3F46')) #3F6212
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [4, 4, 4, 4]
    background_color: 0, 0, 0, 0
#    background_color: C('#15803D')
    italic: True
    markup: True
    font_name: 'Inter'
    font_size: 24
    size_hint_x: None
    size_hint_y: None
    size: [64, 64]
    color: C('#18181B')
    key_val: self.text
