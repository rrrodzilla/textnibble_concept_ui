#:kivy 2.0.0
#:import C kivy.utils.get_color_from_hex
#:import Keypad keypad
#:include keypad.kv
#:import PinDisplay pindisplay
#:include pindisplay.kv
#:import PinNumber pinnumber

<LoginScreen>:
    on_pre_enter: pin_number.clear()
    FloatLayout:
        canvas.before:
            Color:
                rgb: C('#18181B')
            Rectangle:
                pos: self.pos
                size: self.size
#        anchor_y: 'center'
#        anchor_x: 'center'

        PinNumber:
            id: pin_number
            on_clear: pin_display.set_max_size(self.max_size)
            on_add_digit: pin_display.enable(len(self.pin))
        BoxLayout:
            orientation: 'vertical'
            spacing: 0
            pos_hint: {"center_x": .5}
            pos_hint: {"center_y": .75}
            PinDisplay:
                id: pin_display
                pos_hint: {"center_x": .5}
            Keypad:
                disabled: pin_number.is_complete
                on_key_pressed: pin_number.add_digit(args[1])
                pos_hint: {"center_x": .5}
            BoxLayout:
                spacing: 8
                pos_hint: {"center_x": .5}
                width: self.minimum_width
                size_hint: None, None
                orientation: 'horizontal'
                Button:
                    canvas.before:
                        Color:
                            rgb: (C('#D4D4D8') if not self.disabled else C('#3F3F46')) #3F6212
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [4, 4, 4, 4]
                    background_color: 0, 0, 0, 0
                    text: 'Clear'
                    disabled: pin_number.is_empty
                    color: C('#18181B')
                    on_press: pin_number.clear()
                    font_name: 'Inter'
                    markup: True
                    font_size: 18
                    size_hint: None, None
                    size: [64, 64]
                    pos_hint: {"center_y": .5}
                Button:
                    canvas.before:
                        Color:
                            rgb: (C('#15803D') if not self.disabled else C('#3F3F46')) #3F6212
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [4, 4, 4, 4]
                    background_color: 0, 0, 0, 0
                    text: 'Login'
                    on_press: root.manager.current = 'main'
                    disabled: not pin_number.is_complete
                    color: C('#18181B')
                    font_name: 'Inter'
                    font_size: 18
                    markup: True
                    size_hint_x: None
                    size_hint_y: None
                    size: [138, 64]
                    pos_hint: {"center_y": .5}
            BoxLayout:
                size_hint: None, None
                pos_hint: {"center_x": .5}
                width: self.minimum_width
                Label:
                    text: 'Sign in to manage orders.'
                    font_name: "Inter"
                    markup: True
                    italic: True
                    font_size: 22
                    color: C('#F5F5F5')
