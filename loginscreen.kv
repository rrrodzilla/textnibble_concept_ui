#:kivy 2.0.0
#:import C kivy.utils.get_color_from_hex
#:import Keypad keypad
#:include keypad.kv
#:import PinDisplay pindisplay
#:include pindisplay.kv
#:import PinNumber pinnumber

<LoginScreen>:
    on_pre_enter: pin_number.clear()
    AnchorLayout:
        canvas.before:
            Color:
                rgb: C('#18181B')
            Rectangle:
                pos: self.pos
                size: self.size
        anchor_y: 'center'
        anchor_x: 'center'
        padding: 20

        PinNumber:
            id: pin_number
            on_clear: pin_display.set_max_size(self.max_size)
            on_add_digit: pin_display.enable(len(self.pin))
        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            size_hint: .35, .95
            PinDisplay:
                id: pin_display
                size_hint: 1, .3
            Keypad:
                disabled: pin_number.is_complete
                on_key_pressed: pin_number.add_digit(args[1])
            BoxLayout:
                spacing: 8
                orientation: 'horizontal'
                size_hint: 1, .3
                Button:
                    canvas.before:
                        Color:
                            rgb: (C('#E4E4E7') if not self.disabled else C('#A1A1AA')) #3F6212
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [4, 4, 4, 4]
                    background_color: 0, 0, 0, 0
                    text: 'Clear'
                    disabled: pin_number.is_empty
                    color: C('#18181B')
                    on_press: pin_number.clear()
                    font_name: 'Inter'
                    markup: True
                    font_size: 18
                    size_hint: .33, .75
                Button:
                    canvas.before:
                        Color:
                            rgb: (C('#15803D') if not self.disabled else C('#14532D')) #3F6212
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [4, 4, 4, 4]
                    background_color: 0, 0, 0, 0
                    text: 'Login'
                    on_press: root.manager.current = 'main'
                    disabled: not pin_number.is_complete
                    color: C('#18181B')
                    font_name: 'Inter'
                    markup: True
                    font_size: 18
                    size_hint: .66, .75
            Label:
                text: 'Sign in to manage orders.'
                size_hint: 1, .2
                font_name: "Inter"
                markup: True
                italic: True
                font_size: 18
                color: C('#F5F5F5')
