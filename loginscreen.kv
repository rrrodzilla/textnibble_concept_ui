#:kivy 2.0.0
#:import C kivy.utils.get_color_from_hex
#:import Keypad keypad
#:include keypad.kv
#:import PinDisplay pindisplay
#:include pindisplay.kv
#:import PinNumber pinnumber

<LoginScreen>:
    AnchorLayout:
        canvas.before:
            Color:
                rgb: C('#18181B')
            Rectangle:
                pos: self.pos
                size: self.size
        anchor_y: 'center'
        anchor_x: 'center'
        padding: 20

        PinNumber:
            id: pin_number
        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            size_hint: .35, .95
            PinDisplay:
                size_hint: 1, .3
            Keypad:
                disabled: pin_number.is_complete
                on_key_pressed: pin_number.add_digit(args[1])
            BoxLayout:
                spacing: 8
                orientation: 'horizontal'
                size_hint: 1, .3
                Button:
                    text: 'Clear'
                    background_normal: ''
                    background_color: C('#A3A3A3')
                    disabled: False
                    color: C('#18181B')
                    on_press: pin_number.clear()
                    font_name: 'Inter'
                    markup: True
                    font_size: 18
                    size_hint: .33, .75
                Button:

                    text: 'Login'
                    background_normal: ''
                    background_color: C('#15803D')
                    on_press: root.manager.current = 'main'
                    color: C('#18181B')
                    font_name: 'Inter'
                    markup: True
                    font_size: 18
                    size_hint: .66, .75
            Label:
                text: 'Sign in to manage orders.'
                size_hint: 1, .2
                font_name: "Inter"
                markup: True
                italic: True
                font_size: 14
