#:kivy 2.0.0
#:import C kivy.utils.get_color_from_hex
#:import Keypad keypad
#:include keypad.kv
#:import PinDisplay pindisplay
#:include pindisplay.kv

<LoginScreen>:
    AnchorLayout:
        canvas.before:
            Color:
                rgb: C('#18181B')
            Rectangle:
                pos: self.pos
                size: self.size
        anchor_y: 'center'
        anchor_x: 'center'
        padding: 20

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            size_hint: .40, .95
            PinDisplay:
                size_hint: 1, .3
            Keypad:
            BoxLayout:
                spacing: 5
                orientation: 'horizontal'
                size_hint: 1, .3
                Button:
                    text: 'Clear'
                    background_normal: ''
                    background_color: C('#15803D')
                    disabled: True
                    on_press: root.manager.current = 'main'
                    font_name: 'Inter'
                    markup: True
                    font_size: 24
                    size_hint: .75, .75
                Button:

                    text: 'Login'
                    background_normal: ''
                    background_color: C('#15803D')
                    on_press: root.manager.current = 'main'
                    font_name: 'Inter'
                    markup: True
                    font_size: 24
                    size_hint: .75, .75
