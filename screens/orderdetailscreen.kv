<PricingBoxLayout@BoxLayout>
    padding: 0, 0, 48, 0
<PriceLabel@Label>
#    canvas.before:
#        Color:
#            rgb: C('#FF0000')
#        Rectangle:
#            pos: self.pos
#            size: self.size
    font_name: 'Inter'
    markup: True
    size_hint: .35, 1
    font_size: 22
    text_size: self.size
    valign: 'center'
    halign: 'right'
    pos_hint: {'center_y': .5, 'center_x': 1}
<TotalLabel@Label>
#    canvas.before:
#        Color:
#            rgb: C('#0000FF')
#        Rectangle:
#            pos: self.pos
#            size: self.size
    font_name: './fonts/Inter-Thin.ttf'
    size_hint: .65, 1
    text_size: self.size
    valign: 'center'
    halign: 'right'
    markup: True
    font_size: 60
<SimpleButton@Button>:
    size_hint: 1, None
    size: [96, 64]
    font_name: 'Inter'
    font_size: 12
    pos_hint: {'center_y': .5}
<OrderDetailScreen>:
    current_order:
    name: 'order_detail'
    canvas.before:
        Color:
            rgb: C('#18181B')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
#        canvas.before:
#            Color:
#                rgb: C('#FF00FF')
#            Rectangle:
#                size: self.size
#                pos: self.pos
        size_hint: 1, 1
        pos_hint: {'center_y': .5, 'center_x': .5}
        orientation: 'vertical'
        BoxLayout:
#            canvas.before:
#                Color:
#                    rgb: C('#FF00FF')
#                Rectangle:
#                    size: self.size
#                    pos: self.pos
            size_hint: 1, 1
            BoxLayout:
                id: conversation_layout
                orientation: 'vertical'
                size_hint: .25, 1
                pos_hint: {'center_y': .5}
                padding:  24, 0, 24, 24
                Label:
#                    canvas.before:
#                        Color:
#                            rgb: C('#00FF00')
#                        Rectangle:
#                            size: self.size
#                            pos: self.pos
                    text: '[i]Conversation[/i]'
                    color: C('#E5E5E5')
                    font_name: 'Inter'
                    font_size: 22
                    markup: True
                    size_hint: 1, None
#                    size: self.texture_size
                    height: 96
                ScrollView:
                    id: scroll_view
                    pos_hint: {"center_x": .5}
                    width: conversation_layout.minimum_width
                    do_scroll_x: False
                    do_scroll_y: True
                    bar_width: 0
                    size_hint: 1, .95
                    GridLayout:
                        id: conversation
                        cols: 1
                        spacing: 60
#                        padding: 0, 0, 0, 60
                        size_hint: 1, None
                        height: self.minimum_height
                        width: self.minimum_width
#                    canvas.before:
#                        Color:
#                            rgb: C('#00FF00')
#                        Rectangle:
#                            size: self.size
#                            pos: self.pos
                BoxLayout:
                    size_hint: 1, .05
                    orientation: 'horizontal'
                    spacing: 8
                    TextInput:
                        id: msg_input
#                        canvas.before:
#                            Color:
#                                rgb: C('#00FF00')
#                            Rectangle:
#                                size: self.size
#                                pos: self.pos
                        font_name: 'Inter'
                        pos_hint: {"center_y": .5}
                        size_hint: .7, 1
                    Button:
#                        canvas.before:
#                            Color:
#                                rgb: C('#FF0000')
#                            Rectangle:
#                                size: self.size
#                                pos: self.pos
                        pos_hint: {"center_y": .5}
                        on_press:root.send_order_message()
                        size_hint: .3, 1
                        disabled: msg_input.text == ''
                        text: 'Send'
            BoxLayout:
                id: quote_actions
                canvas.before:
                    Color:
                        rgb: C('#0F0F0F')
                    Rectangle:
                        size: self.size
                        pos: self.pos
                size_hint: .45, 1
                BoxLayout:
                    orientation: 'vertical'
                    PricingBoxLayout:
#                        canvas.before:
#                            Color:
#                                rgb: C('#FF00FF')
#                            Rectangle:
#                                pos: self.pos
#                                size: self.size
                        PriceLabel:
                            text: '[i]Subtotal[/i]'
                        TotalLabel:
                            text: '[i]$0.00[/i]'
                    PricingBoxLayout:
                        PriceLabel:
                            text: '[i]Total Tax[/i]'
                        TotalLabel:
                            text: '[i]$0.00[/i]'
                    PricingBoxLayout:
                        PriceLabel:
                            text: '[i]Order Total[/i]'
                        TotalLabel:
                            font_size: 84
                            font_name: 'Inter'
                            text: '[b]$0.00[/b]'
                    PricingBoxLayout:
                        PriceLabel:
                            text: 'Estimated time\nto prepare'
                        TotalLabel:
                            text: '10 minutes'
                    Button:
                        text: 'Send price'
                        on_press:root.update_order_status(status.AWAITING_PAYMENT)
            BoxLayout:
                id: keypad
                canvas.before:
                    Color:
                        rgb: C('#0F0F0F')
                    Rectangle:
                        size: self.size
                        pos: self.pos
                size_hint: .35, 1

