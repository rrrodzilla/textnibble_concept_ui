#:kivy 2.0.0
#:import C kivy.utils.get_color_from_hex
#:import status models.order_status_enum.OrderStatus

<SimpleButton@Button>:
    size_hint: None, None
    size: [256, 64]
    pos_hint: {'center_y': .5}
<OrderDetailScreen>:
    current_order:
    name: 'order_detail'
    AnchorLayout:
#        canvas.before:
#            Color:
#                rgb: C('#FF00FF')
#            Rectangle:
#                size: self.size
#                pos: self.pos
        anchor_y: 'center'
        anchor_x: 'center'
        size_hint: None, 1
        pos_hint: {'center_y': .5, 'center_x': .5}
        width: buttons.minimum_width
        BoxLayout:
            id: buttons
#            canvas.before:
#                Color:
#                    rgb: C('#0000FF')
#                Rectangle:
#                    size: self.size
#                    pos: self.pos
            spacing: 24
            orientation: 'vertical'
            size_hint: 1, .5
            minimum_width: self.width
            pos_hint: {'center_y': .5}
            SimpleButton:
                text: 'Send Message'
                on_press:root.update_order_status(status.AWAITING_REPLY)
            SimpleButton:
                text: 'Receive Update'
                on_press:root.update_order_status(status.UPDATED)
            SimpleButton:
                text: 'Send Quote'
                on_press:root.update_order_status(status.AWAITING_PAYMENT)
            SimpleButton:
                text: 'Receive Payment'
                on_press:root.update_order_status(status.PAID)
            SimpleButton:
                text: 'Send to Kitchen'
                on_press:root.update_order_status(status.WORKING)
            SimpleButton:
                text: 'Finish Working'
                on_press:root.update_order_status(status.AWAITING_PICKUP)
            SimpleButton:
                text: 'Picked Up'
                on_press:root.update_order_status(status.FULFILLED)
            Label:
                text: root.current_order.customer_name if (root.current_order is not None and root.current_order.customer_name) else ''
            Label:
                text: root.current_order.order_message if (root.current_order is not None and root.current_order.order_message) else ''
            Label:
                text: root.current_order.status.name if (root.current_order is not None and root.current_order.status) else ''

