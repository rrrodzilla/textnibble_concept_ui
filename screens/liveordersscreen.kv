#:kivy 2.0.0
#:import C kivy.utils.get_color_from_hex
#:import Order order
#:include order.kv


<LiveOrdersScreen>:
    orders:
    order_manager:
    canvas.before:
        Color:
            rgb: C('#18181B')
        Rectangle:
            pos: self.pos
            size: self.size
    name: 'live_orders'
    Label:
        text: f'[i]Waiting for new orders.\nMake sure your customers know to text you at 555-555-5555 to place new orders.[/i]'
        size_hint: (1, 1) if len(root.orders) == 0 else (0, 0)
        font_name: 'Inter'
        markup: True
        font_size: 36
    ScrollView:
        size_hint: None, 1
        pos_hint: {"center_x": .5}
        width: main_layout.minimum_width
        do_scroll_x: False
        do_scroll_y: True
        bar_width: 0
        GridLayout:
            id: main_layout
            halign: 'center'
            spacing: 96
            padding: 64
            size_hint: None, None
            height: self.minimum_height
            width: self.minimum_width
            pos_hint: {"center_x": .1}
            cols: int((root.width-144) / 384)
