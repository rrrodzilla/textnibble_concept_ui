#:kivy 2.0.0
#:import C kivy.utils.get_color_from_hex
#:import Triangle kivy.graphics

<MessageLabel@Label>:
    font_name: 'Inter'
    markup: True
    halign: 'left'
    valign: 'top'
    size_hint: None, 1
    size: self.texture_size
    font_size: 12
<ConversationMessageWidget>:
#    canvas.before:
#        Color:
#            rgb: C('#00FF00')
#        Rectangle:
#            size: self.size
#            pos: self.pos
    conversation:
    humanized_time:
    size_hint: 1, None
    pos_hint: {'center_x': .5, 'center_y': .5}
    FloatLayout:

        size_hint: 1, 1
        width: root.width
        height: 96
        MessageLabel:
            id: msg
            canvas.before:
                Color:
                    rgb: C('#D4D4D8') if not root.conversation.is_business_response else C('#52525B')
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [8, 8, 8, 8]
                Color:
                    rgb: C('#D4D4D8') if not root.conversation.is_business_response else C('#52525B')
                Triangle:
                    points: [self.width - 48, self.y, self.width - 24, self.y, self.width - 48, self.y - 18] if not root.conversation.is_business_response else [self.x + 48, self.y, self.x + 72, self.y, self.x + 72, self.y - 18]
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: 1, 1
            text_size: self.size
            font_size: 18
            color: C('#3F3F46') if not root.conversation.is_business_response else C('#A1A1AA')
            halign: 'left'
            valign: 'top'
            padding: 24, 24
            text: root.conversation.message
        BoxLayout:
#            canvas.before:
#                Color:
#                    rgb: C('#0000FF')
#                Rectangle:
#                    size: self.size
#                    pos: self.pos
            pos: (msg.width - self.width - 60, msg.y - self.height - 5) if not root.conversation.is_business_response else (84, msg.y - self.height - 5)
            size_hint: None, .2
            width: self.minimum_width
            spacing: 4
            MessageLabel:
#                canvas.before:
#                    Color:
#                        rgb: C('#FF0000')
#                    Rectangle:
#                        size: self.size
#                        pos: self.pos
                id: msg_sender
                text: f'[i]{root.conversation.sender}[/i]'
                font_size: 16
                color: C('#F5F5F5') if not root.conversation.is_business_response else C('#737373')
#                halign: 'right' if not root.conversation.is_business_response else 'left'
            MessageLabel:
                id: msg_time
                text: f'[i] - {root.humanized_time}[/i]'
                font_size: 16
                color: C('#F5F5F5') if not root.conversation.is_business_response else C('#737373')
