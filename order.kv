<Label>:
    font_name: "Inter"
    markup: True
    color: C('#F4F4F5')
<Order>:
    accent_color:
    order_data: order_obj
    canvas.before:
        Color:
            rgb: C('#000000')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: 4, 4, 4, 4
    size_hint: None, None
    width: 384
    height: 128
    BoxLayout:
        canvas.before:
            Color:
                rgb: root.accent_color
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: 4, 0, 0, 4
        width: 10
        size_hint: None, 1

    Label:
        size_hint: .45, 1
        font_size: 14
        text: '[size=60][b]21[/b][/size]\nminutes ago'
        valign: 'center'
        color: C('#E4E4E7')
        halign: 'center'
        text_size: self.size
    BoxLayout:
        canvas.before:
            Color:
                rgb: C('#27272A')
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: 0, 4, 4, 0
        orientation: 'vertical'
        padding: 12
        Label:
            id: order_message_text
            text: order_data.order_message
            valign: 'top'
            color: C('#A1A1AA')
            font_size: 16
            text_size: self.size
            multiline: True
            size_hint: 1, .8
        Label:
            text: 'Roland R.'
            text_size: self.size
            size_hint: 1, .2
            color: C('#52525B')
            font_size: 14
            halign: 'right'
