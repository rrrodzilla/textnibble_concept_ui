<Label>:
    font_name: "Inter"
    markup: True
    color: C('#F4F4F5')
<Order>:
    accent_color:
    accent_darker:
    order_message:
    customer_name:
    minutes:
    ago:
    orientation: 'vertical'
    size_hint: None, None
    width: 384
    height: 128
    BoxLayout:
        canvas.before:
            Color:
                rgb: root.accent_color
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: 4, 4, 4, 4
        size_hint: None, None
        width: root.width
        height: root.height
#        BoxLayout:
#            canvas.before:
#                Color:
#                    rgb: root.accent_color
#                RoundedRectangle:
#                    pos: self.pos
#                    size: self.size
#                    radius: 4, 0, 0, 4
#            width: 10
#            size_hint: None, 1
        Label:
            size_hint: .45, 1
            font_size: 14
            text: '[size=60][b]' + root.minutes + '[/b][/size]\n' + root.ago
            valign: 'center'
#            color: C('#D4D4D8')
#            color: root.accent_color
            color: C('#18181B')
            halign: 'center'
            text_size: self.size
        BoxLayout:
            canvas.before:
                Color:
                    rgb: C('#27272A')
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: 0, 4, 4, 0
            orientation: 'vertical'
            padding: 12
            Label:
                id: order_message_text
                text: root.order_message
                valign: 'top'
                color: C('#D4D4D8')
                font_size: 16
                text_size: self.size
                multiline: True
                size_hint: 1, .8
            Label:
                text: root.customer_name
                text_size: self.size
                size_hint: 1, .2
                color: C('#A1A1AA')
                font_size: 14
                halign: 'right'
    FloatLayout:
        id: float_label
        opacity: .85
        canvas.before:
            Color:
                rgba: root.accent_color
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: 0, 0, 8, 8
        size_hint: None, None
        width: root.width - 20
        height: 32
        pos_hint: {"center_x": .5}
        Label:
            canvas.before:
                Color:
                    rgb: C('#18181B')
                RoundedRectangle:
                    pos: self.pos
                    size: (self.size)
                    radius: 0, 0, 8, 8
            id: status_label
            size_hint: None, None
            opacity: 1
            height: float_label.height - 2
            width: float_label.width - 4
            pos_hint: {"top": 1, "center_x": .5}
            font_size: 12
            font_name: 'Inter'
            spacing: 3
            bold: True
            color: C('#D4D4D8')
#            color: root.accent_color